<%= render "helpers/navbarForms" %>

<% if !flash[:notice].blank? %>
  <div class="dogFLashNotice">
    <%=flash[:notice] %>
  </div>
  <% end %>

<div class="dogShow">
  <h2>Dog Details View</h2>

  <table class="listings" summary="Dog detail view">
  
    <tr>
      <th>Photo</th>
      <td><%= image_tag @dog.avatar.url :thumb %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @dog.name %></td>
    </tr>
    <tr>
      <th>Breed</th>
      <td><%= @dog.breed %></td>
    </tr>
    <tr>
      <th>Gender</th>
      <td><%= @dog.gender %></td>
    </tr>
    <tr>
      <th>Size</th>
      <td><%= @dog.size %></td>
    </tr>
    <tr>
      <th>Age</th>
      <td><%= @dog.age %></td>
    </tr>
    <tr>
      <th>Good with People</th>
      <td><%= @dog.people %></td>
    </tr>
    <tr>
      <th>Good with Kids</th>
      <td><%= @dog.kids %></td>
    </tr>
    <tr>
      <th>Good with Other Dogs</th>
      <td><%= @dog.other_dogs %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @dog.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @dog.updated_at %></td>
    </tr>
    <tr>
      <th>Edit Contents</th>
      <td><%= link_to("Edit Record", action: 'edit', id: @dog.id, class: 'action edit') %></td>
    </tr>
  </table>
    <br /><br />

<%= link_to("<< Back to List", action: 'index', class: 'back-link') %>

</div>